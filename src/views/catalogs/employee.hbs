<div class="container pt-5 animate__animated animate__fadeInUpBig shadow">
    <div class="card">
        <div class="card-header">
            <div class="d-flex d-md-flex bg-dark rounded justify-content-around">
                <h2 class="text-white animate__animated animate__zoomIn animate__delay-1s py-1">Empleado</h2>
                <button id="bntAdd" class="btn btn-primary me-md-2 my-2" data-bs-toggle="modal" data-bs-target="#ModalAdd">
                    Nuevo empleado
                </button>
            </div>
        </div>
        <div class="d-flex text-wrap table-responsive-sm px-3 table-wrapper-scroll rounded">
            <table class="table table-striped table-primary table-hover text-center rounded" id="mytable">
                <thead>
                    <tr class="table-dark rounded">
                        <th class="thareas">Nombre</th>
                        <th class="thareas">Apellido Paterno</th>
                        <th class="thareas">Apellodo Materno</th>
                        <th class="thareas">Genero</th>
                        <th class="thareas">Estatus</th>
                        <th class="thareas">Accion</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                        <tr>
                            <td>{{ name }}</td>
                            <td>{{ fatherSurname }}</td>
                            <td>{{ motherSurname }}</td>
                            <td>{{ gender }}</td>
                            <td>
                                <div class="form-switch">    
                                    <input class="form-check-input check" type="checkbox" data-id="{{ oid }}" 
                                        data-name="{{ name }}" data-father="{{ fatherSurname }}" 
                                        data-mother="{{ motherSurname }}" data-gender="{{ gender }}" 
                                        aria-expanded="false" {{#if status}} checked {{/if}}>
                                    
                                    <label>{{ active }}</label>
                                </div>
                            </td>
                            <td> 
                                <a class="btn btn-outline-primary btn-sm edit" data-bs-toggle="modal" 
                                    data-bs-target="#EditModal" data-id="{{ oid }}" data-name="{{ name }}" 
                                    data-father="{{ fatherSurname }}" data-mother="{{ motherSurname }}" 
                                    data-gender="{{ gender }}" data-active="{{ active }}" >Editar</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<form action="/catalogs/employee/save" method="post" id="formAdd">
    <div class="modal fade" id="ModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header area-header">
                    <h4 class="modal-title" id="exampleModalLabel">Agregar empleado</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" name="name" class="form-control name" placeholder="Nombre" required>
                    </div>
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" name="fatherSurname" class="form-control fatherSurname" placeholder="Apellido Paterno" required>
                    </div>
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" name="motherSurname" class="form-control motherSurname" placeholder="Apellido Materno" required>
                    </div>
                    <div class="form-group">
                        <select name="gender" class="form-select gender" data-show-content="true" required>
                            <option value="">Selecciona un genero</option>
                            <option value="M">Hombre</option>
                            <option value="F">Mujer</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form action="/catalogs/user/update" method="post" id="formUpdate">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header area-header">
                    <h4 class="modal-title" id="exampleModalLabel">Editar Empleado</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Nombre" required>
                    </div>
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" id="fatherSurname" name="fatherSurname" class="form-control" placeholder="Apellido Paterno" required>
                    </div>
                    <div class="form-group input-group pb-1">
                        <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                        <input type="text" id="motherSurname" name="motherSurname" class="form-control" placeholder="Apellido Materno" required>
                    </div>
                    <div class="form-group p-1">
                        <select id="gender" name="gender" class="form-select gender" data-show-content="true" required>
                            <option value="">Selecciona un genero</option>
                            <option value="M">Hombre</option>
                            <option value="F">Mujer</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="oid" id="oid">
                    <input type="hidden" name="active" id="active">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" id="updateArea">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/jquery/dist/jquery.min.js"></script>
<script src="/js/catalogs/catEmployee.js"></script>