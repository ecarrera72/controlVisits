<div class="container pt-5 animate__animated animate__fadeInUpBig shadow">
    <div class="card">
        <div class="card-header">
            <div class="d-flex d-md-flex bg-dark rounded justify-content-around">
                <h2 class="text-white animate__animated animate__zoomIn animate__delay-1s py-1">Areas</h2>
                <button id="bntAdd" class="btn btn-primary me-md-2 my-2" data-bs-toggle="modal" data-bs-target="#ModalAdd">
                    Nueva area
                </button>
            </div>
        </div>
        <div class="d-flex text-wrap table-responsive-sm px-3 table-wrapper-scroll rounded">
            <table class="table table-striped table-primary table-hover text-center rounded" id="mytable">
                <thead>
                    <tr class="table-dark rounded">
                        <th class="thareas">Descripcion</th>
                        <th class="thareas">Estatus</th>
                        <th class="thareas">Accion</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                        <tr>
                            <td>{{ description }}</td>
                            <td>
                                <div class="form-switch">
                                    <input class="form-check-input check" type="checkbox" data-id="{{ oid }}" 
                                        data-description="{{ description }}" aria-expanded="false" 
                                        {{#if status}} checked {{/if}}>
                                    <label>{{ active }}</label>
                                </div>
                            </td>
                            <td> 
                                <a href="javascript:void(0);" class="btn btn-outline-primary btn-sm edit" data-id="{{ oid }}" data-description="{{ description }}" data-active="{{ active }}">Editar</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Add Product-->
<form action="/catalogs/area/save" method="post" id="formAdd">
    <div class="modal fade" id="ModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header area-header">
                    <h4 class="modal-title" id="exampleModalLabel">Agregar Area</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" name="description" class="form-control areaDescription" placeholder="Nueva Area" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal Update Product-->
<form action="/catalogs/area/update" method="post">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header area-header">
                    <h4 class="modal-title" id="exampleModalLabel">Editar Area</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" name="description" class="form-control areaDescription" placeholder="Area" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" class="areaId">
                    <input type="hidden" name="active" class="areaActive">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary" id="updateArea">Actualizar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/jquery/dist/jquery.min.js"></script>
<script src="/js/catalogs/catArea.js"></script>